<view class="page">
  <view class="page__bd">
    <view class="section section_gap" wx:for="{{array}}" wx:for-item="item">
      <view class="section__ctn">
        <image style="width: 150px; height: 150px; background-color: #ffffff;" mode="{{item.mode}}" src="{{src}}"></image>
      </view>
      <view class="section__title" >
        <text class="red" style="font-weight: 400; font-size: medium">{{item.text1}}</text>
      </view>
      <view class="section__title" >
        <text class="red" style="font-weight: 400; font-size: medium">{{item.text2}}</text>
      </view>
    </view>
  </view>
</view>